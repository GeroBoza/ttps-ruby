

<h1 class="text-center mt-5 mb-3">BOOKS</h1>



<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">User ID</th>
      <th scope="col">Name</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <th scope="row"><%= book.user_id %></th >
        <td><%= book.name %></td>

        <td><%= link_to 'Notes', user_book_notes_path(@user, book), class: 'btn btn-primary text-white' %></td>
        <td><%= link_to 'HTML', user_book_export_book_notes_path(@user, book), class: 'btn btn-success text-white' %></td>
        <% if (book.name != "Global Book")  %>
            <td><%= link_to 'Edit', edit_user_book_path(@user, book), class: 'btn btn-secondary text-white' %></td>
            <td><%= link_to 'Destroy', [@user, book], method: :delete, data: { confirm: 'Are you sure? All notes in this book will be deleted' }, class: 'btn btn-danger text-white' %></td>
        <% else %>
            <td><%= link_to 'Edit', edit_user_book_path(@user, book), class: 'btn btn-secondary text-white disabled' %></td>
            <td><%= link_to 'Destroy', [@user, book], method: :delete, data: { confirm: 'Are you sure? All notes in this book will be deleted' }, class: 'btn btn-danger text-white disabled' %></td>

        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row col-12 justify-content-center">

<%= link_to 'New Book', new_user_book_path(@user), class: 'btn btn-primary text-white', style: 'width: 10%' %>
</div>